@model cibelle.Models.NotaDeVenda

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Nota de venda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Tipo" /> @Html.DisplayNameFor(model => model.Tipo)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Cliente" class="control-label"></label>
                <select asp-for="IdCliente" asp-items="@(ViewBag.Clientes)" class="form-control">
                    <option value="">-- Selecione o Cliente --</option>
                </select>
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor" class="control-label"></label>
                <select asp-for="IdVendedor" asp-items="@(ViewBag.Vendedores)" class="form-control">
                    <option value="">-- Selecione o Vendedor --</option>
                </select>
                <span asp-validation-for="IdVendedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdsItems" class="control-label">Selecione os Produtos</label>
                <select asp-for="IdsItems" asp-items='@(ViewBag.Produtos)' multiple class="form-control"></select>
                <span asp-validation-for="IdsItems" class="text-danger"></span>
            </div>
            @* <div class="form-group">
            <label asp-for="quantidades" class="control-label">Quantidades</label>
            <input asp-for="quantidades" class="form-control" />
            <span asp-validation-for="quantidades" class="text-danger"></span>
            </div> *@

            <div class="form-group">
                <label asp-for="Transportadora" class="control-label"></label>
                <select asp-for="IdTransportadora" asp-items="@(ViewBag.Transportadoras)" class="form-control">
                    <option value="">-- Selecione a Transportadora --</option>
                </select>
                <span asp-validation-for="IdTransportadora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoDePagamento" class="control-label">Tipo de Pagamento</label>
                <select asp-for="IdTipoPagamento" asp-items="@(ViewBag.TiposDePagamento)" class="form-control">
                    <option value="">-- Selecione o tipo de pagamento --</option>
                </select>
                <span asp-validation-for="IdTransportadora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
